<h2>Login or Sign-Up</h2>

<form class="form login-form">
  <div class="form-group">
    <label for="email-login">User Name</label>
    <input class="form-input" type="text" id="user" />
  </div>
  <div class="form-group">
    <label for="password-login">Password</label>
    <input class="form-input" type="password" id="password" />
  </div>
  <div class="form-group">
    <button id="login" class="btn btn-primary" type="submit">Login!</button>
  </div>
  <div class="form-group">
    <button id="logout" class="btn btn-primary" type="submit">Provide user name and password and Sign up!</button>
  </div>
</form>

<script src="/js/login.js"></script>